{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.0",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": [
    "ignored-file",
    "**/__tests__/**",
    "**/*.md"
  ]
}
